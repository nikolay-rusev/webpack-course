{
    "id": "home-widget",
    "components": [
        {
            "type": "container",
            "bindTo": "home-widget",
            "children": [
                {
                    "type": "grid",
                    "bindTo": "{parent}",
                    "children": [
                        {
                            "type": "carousel",
                            "bindTo": "{parent}.carousel",
                            "extraClasses": "reg-carousel-hero",
                            "showNavigationArrows": false,
                            "stopOnHover": true,
                            "region": {
                                "row": 1,
                                "col": 1,
                                "sizeLarge": 12
                            },
                            "item": {
                                "type": "cardPanelContainer",
                                "bindTo": "{parent}.{dynamicItem}",
                                "itemsPerRowS": 1,
                                "itemsPerRowM": 1,
                                "itemsPerRowL": 1,
                                "children": [
                                    {
                                        "type": "cardPanel",
                                        "bindTo": "{parent}.cardPanel"
                                    }
                                ]
                            }
                        },
                        {
                            "type": "panel",
                            "bindTo": "{parent}.categories",
                            "extraClasses": "reg-panel-grey",
                            "region": {
                                "row": 2,
                                "col": 1,
                                "sizeLarge": 12
                            },
                            "children": [
                                {
                                    "type": "title",
                                    "bindTo": "{parent}.title1",
                                    "size": 1,
                                    "extraClasses": "tq-text-center reg-title-green"
                                },
                                {
                                    "type": "title",
                                    "bindTo": "{parent}.title2",
                                    "size": 6,
                                    "extraClasses": "tq-offset-top tq-offset-bottom tq-text-center"
                                },
                                {
                                    "type": "cardPanelContainer",
                                    "bindTo": "{parent}.categoriesCards",
                                    "itemsPerRowS": 1,
                                    "itemsPerRowM": 2,
                                    "itemsPerRowL": 4,
                                    "stretch": true,
                                    "extraClasses": "reg-card-default",
                                    "item": {
                                        "type": "cardPanel",
                                        "bindTo": "{parent}.{dynamicItem}"
                                    }
                                },
                                {
                                    "type": "title",
                                    "bindTo": "{parent}.title3",
                                    "size": 1,
                                    "extraClasses": "tq-offset-top tq-text-center reg-title-green"
                                },
                                {
                                    "type": "customCardsContainer",
                                    "bindTo": "{parent}.categoriesCardsMini",
                                    "itemsPerRowS": 1,
                                    "itemsPerRowM": 2,
                                    "itemsPerRowL": 4,
                                    "stretch": true,
                                    "extraClasses": "reg-card-mini",
                                    "itemExtraClasses": "tq-card-icon-background",
                                    "item": {
                                        "type": "mixin",
                                        "id": "card-mini",
                                        "bindTo": "{parent}.{dynamicItem}"
                                    }
                                }
                            ]
                        },
                        {
                            "type": "title",
                            "bindTo": "{parent}.title4",
                            "size": 1,
                            "extraClasses": "tq-text-center tq-offset-top reg-title-green",
                            "region": {
                                "row": 3,
                                "col": 1,
                                "sizeLarge": 12
                            }
                        },
                        {
                            "type": "title",
                            "bindTo": "{parent}.title5",
                            "size": 6,
                            "extraClasses": "tq-text-center tq-offset-bottom",
                            "region": {
                                "row": 3,
                                "col": 1,
                                "sizeLarge": 12
                            }
                        },
                        {
                            "type": "customCardsContainer",
                            "bindTo": "{parent}.linkCards",
                            "itemsPerRowS": 1,
                            "itemsPerRowM": 2,
                            "itemsPerRowL": 4,
                            "stretch": true,
                            "extraClasses": "reg-card-link",
                            "itemExtraClasses": "tq-card-icon-background",
                            "region": {
                                "row": 4,
                                "col": 1,
                                "sizeLarge": 12
                            },
                            "item": {
                                "type": "mixin",
                                "id": "card-link",
                                "bindTo": "{parent}.{dynamicItem}"
                            }
                        }
                    ]
                }
            ]
        }
    ]
}
